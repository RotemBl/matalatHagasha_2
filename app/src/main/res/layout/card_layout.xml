<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="250dp"
                android:src="@drawable/butter" />

            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginStart="185dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="TextView" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:layout_marginLeft="186dp"
                android:layout_marginTop="65dp"
                android:insetLeft="0dp"
                android:text="+"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantitytextView"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@id/plusButton"
                android:gravity="center"
                android:text="TextView" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@id/quantitytextView"
                android:layout_toRightOf="@id/quantitytextView"
                android:text="-" />

            <Button
                android:id="@+id/addToCardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="225dp"
                android:layout_marginTop="130dp"
                android:text="Add" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>